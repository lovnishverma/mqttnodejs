<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Add your custom styles here */
    body {
      transition: background-color 0.5s, color 0.5s;
    }

    body.light-mode {
      background-color: white;
      color: black;
    }

    body.dark-mode {
      background-color: #1a1a1a;
      color: white;
    }

    .table {
      border-collapse: collapse;
      width: 100%;
      margin-bottom: 20px;
    }

    .table th,
    .table td {
      padding: 8px;
      border-bottom: 1px solid #ddd;
      transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    }

    .table.dark-mode {
      background-color: #2d2d2d;
    }

    .table.dark-mode th,
    .table.dark-mode td {
      border-color: white;
      color: white; /* Set text color to white in dark mode */
    }

    .btn.dark-mode {
      background-color: #333333;
      border-color: #333333;
      color: white;
    }

    .fade-in {
      opacity: 0;
      animation: fadeInAnimation ease-in 1s forwards;
    }

    @keyframes fadeInAnimation {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
  </style>
</head>
<body class="light-mode">
  <div class="container fade-in">
    <div class="d-flex justify-content-end my-3">
      <button class="btn btn-warning ml-2" onclick="window.history.back();">Go Back</button>
      <button class="btn btn-dark ml-2" id="darkModeToggle">Dark Mode</button>
      <button class="btn btn-danger ml-2" id="deleteDataButton">Delete Data</button>
    </div>
    <h6 class="text-center mt-4"> Real-Time Historical Data</h6>
    <div class="table-responsive">
      <div class="text-center mt-4">
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Command</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(function(row) { %>
            <tr>
              <td><%= row.date %></td>
              <td><%= row.time %></td>
              <td><%= row.command %></td>
              <td><%= row.status %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const deleteDataButton = document.getElementById('deleteDataButton');

    darkModeToggle.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      document.body.classList.toggle('light-mode');
    });

    deleteDataButton.addEventListener('click', async () => {
      const confirmDelete = confirm('Are you sure you want to delete all historic data? This action cannot be undone.');
      if (confirmDelete) {
        try {
          // Add your delete data logic here
        } catch (error) {
          console.error('Error deleting data:', error);
          alert('An error occurred while deleting data.');
        }
      }
    });
  </script>
</body>
</html>
